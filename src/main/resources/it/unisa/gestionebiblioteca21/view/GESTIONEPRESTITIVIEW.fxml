<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unisa.gestionebiblioteca21.controller.GestionePrestitiController">

   <children>

      <HBox prefHeight="61.0" prefWidth="600.0" style="-fx-background-color: grey;">
         <children>
            <Label alignment="CENTER" prefHeight="62.0" prefWidth="600.0" text="GESTIONE PRESTITI">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
            </Label>
         </children>
      </HBox>

      <TextField fx:id="txtRicercaPrestito" layoutX="14.0" layoutY="70.0"
                 prefWidth="570.0" promptText="Ricerca per libro o utente..." />

      <HBox layoutY="115.0" prefHeight="30.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefWidth="600.0" text="ELENCO PRESTITI">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
         </children>
      </HBox>

      <TableView fx:id="tableview" layoutX="0.0" layoutY="150.0"
                 prefWidth="600.0" prefHeight="150.0">

         <columns>
            <TableColumn fx:id="colLibro" prefWidth="150.0" text="LIBRO" />
            <TableColumn fx:id="colUtente" prefWidth="150.0" text="UTENTE" />
            <TableColumn fx:id="colDataPrestito" prefWidth="150.0" text="DATA PRESTITO" />
            <TableColumn fx:id="colDataScadenza" prefWidth="150.0" text="SCADENZA" />
         </columns>

         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>

      <Button fx:id="btnRegistraPrestito" layoutX="50.0" layoutY="320.0"
              prefWidth="200.0" text="Registra Prestito"
              style="-fx-background-color: lightgrey;" onAction="#handleRegistraPrestito" />

      <Button fx:id="btnRegistraRestituzione" layoutX="350.0" layoutY="320.0"
              prefWidth="200.0" text="Registra Restituzione"
              style="-fx-background-color: lightgrey;" onAction="#handleRegistraRestituzione" />

      <Button fx:id="btnDashboard" layoutX="350.0" layoutY="360.0"
              prefWidth="200.0" text="Dashboard"
              style="-fx-background-color: lightgrey;" onAction="#handleBackDashboard" />

   </children>
</Pane>
