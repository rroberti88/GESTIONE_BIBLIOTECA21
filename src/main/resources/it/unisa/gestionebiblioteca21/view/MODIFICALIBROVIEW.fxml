<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox alignment="TOP_CENTER"
      spacing="20"
      prefWidth="600" prefHeight="400"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unisa.gestionebiblioteca21.controller.ModificaLibroController"
      styleClass="root-light"
      stylesheets="@../css/appstyle.css">

    <HBox alignment="CENTER_LEFT"
          spacing="10"
          prefHeight="90" prefWidth="600"
          style="-fx-background-color: #4A4A4C;
                 -fx-background-radius: 0 0 25 25;
                 -fx-padding: 0 20;">

        <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
            <image><Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png"/></image>
        </ImageView>

        <Region HBox.hgrow="ALWAYS" />

        <Label text="Modifica Libro"
               style="-fx-font-size: 26px;
                      -fx-font-weight: bold;
                      -fx-text-fill: white;" />

        <Region HBox.hgrow="ALWAYS" />

        <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
            <image><Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png"/></image>
        </ImageView>

    </HBox>


    <VBox spacing="12" maxWidth="350">

        <VBox spacing="5">
            <Label text="Titolo" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="txtTitolo"
                       promptText="Modifica il titolo"
                       styleClass="apple-textfield"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Autore" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="txtAutore"
                       promptText="Modifica l'autore"
                       styleClass="apple-textfield"/>
        </VBox>

        <VBox spacing="5">
            <Label text="ISBN" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="txtISBN"
                       promptText="Modifica l'ISBN"
                       styleClass="apple-textfield"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Anno di Pubblicazione" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="txtAnnoPubblicazione"
                       promptText="Modifica anno di pubblicazione"
                       styleClass="apple-textfield"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Categoria" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="txtCategoria"
                       promptText="Modifica la categoria"
                       styleClass="apple-textfield"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Copie Totali" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="txtCopieTotali"
                       promptText="Modifica numero copie totali"
                       styleClass="apple-textfield"/>
        </VBox>

        <VBox spacing="5">
            <Label text="Copie Disponibili" style="-fx-font-size: 14px; -fx-text-fill: #555;"/>
            <TextField fx:id="txtCopieDisponibili"
                       promptText="Modifica numero copie disponibili"
                       styleClass="apple-textfield"/>
        </VBox>

    </VBox>


    <HBox spacing="20" alignment="CENTER">

        <Button fx:id="btnSalvaModifiche"
                text="Salva Modifiche"
                onAction="#handleSalva"
                prefWidth="160" prefHeight="40"
                style="-fx-background-color: #007AFF;
                       -fx-background-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;"/>

        <Button fx:id="btnAnnulla"
                text="Annulla"
                onAction="#handleAnnulla"
                prefWidth="140" prefHeight="40"
                style="-fx-background-color: #FF3B30;
                       -fx-background-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;"/>

    </HBox>

</VBox>
