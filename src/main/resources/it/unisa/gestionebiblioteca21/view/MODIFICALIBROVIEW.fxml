<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.unisa.gestionebiblioteca21.controller.ModificaLibroController"
           prefWidth="620" prefHeight="720"
           style="-fx-background-color: linear-gradient(to bottom right, #0B1220, #0E1B2E, #111827);">

    <VBox alignment="TOP_CENTER"
          spacing="16"
          maxWidth="560"
          prefWidth="560"
          style="-fx-background-color: rgba(255,255,255,0.08);
                 -fx-background-radius: 26;
                 -fx-border-radius: 26;
                 -fx-border-color: rgba(255,255,255,0.16);
                 -fx-border-width: 1;
                 -fx-padding: 22;">

        <effect>
            <DropShadow radius="30" spread="0.12" offsetY="10" color="#000000AA"/>
        </effect>

        <HBox alignment="CENTER_LEFT" spacing="14"
              style="-fx-background-color: rgba(255,255,255,0.06);
                     -fx-background-radius: 20;
                     -fx-padding: 14 16;">

            <ImageView fitHeight="42" fitWidth="42" preserveRatio="true">
                <image>
                    <Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png"/>
                </image>
            </ImageView>

            <VBox spacing="2" alignment="CENTER_LEFT">
                <Label text="Biblioteca"
                       style="-fx-font-size: 16px;
                              -fx-font-weight: 900;
                              -fx-text-fill: white;"/>
                <Label text="Modifica libro"
                       style="-fx-font-size: 12px;
                              -fx-text-fill: rgba(255,255,255,0.75);"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="EDIT"
                   style="-fx-font-size: 12px;
                          -fx-font-weight: 900;
                          -fx-text-fill: white;
                          -fx-background-color: rgba(0,122,255,0.35);
                          -fx-background-radius: 999;
                          -fx-padding: 6 12;"/>
        </HBox>

        <VBox spacing="8" alignment="CENTER_LEFT" prefWidth="516">
            <Label text="Modifica i dati del libro"
                   style="-fx-font-size: 22px;
                          -fx-font-weight: 900;
                          -fx-text-fill: white;"/>
            <Label text="Aggiorna i campi necessari e salva per applicare le modifiche al catalogo."
                   wrapText="true"
                   style="-fx-font-size: 13px;
                          -fx-text-fill: rgba(255,255,255,0.7);"/>
        </VBox>

        <VBox spacing="12" prefWidth="516">

            <VBox spacing="6">
                <Label text="Titolo"
                       style="-fx-font-size: 12px;
                              -fx-font-weight: 800;
                              -fx-text-fill: rgba(255,255,255,0.88);"/>
                <TextField fx:id="txtTitolo"
                           promptText="Modifica il titolo"
                           style="-fx-background-color: rgba(255,255,255,0.12);
                                  -fx-background-radius: 14;
                                  -fx-border-radius: 14;
                                  -fx-border-color: rgba(255,255,255,0.18);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: rgba(255,255,255,0.55);
                                  -fx-padding: 12;
                                  -fx-font-size: 14px;"/>
            </VBox>

            <VBox spacing="6">
                <Label text="Autore"
                       style="-fx-font-size: 12px;
                              -fx-font-weight: 800;
                              -fx-text-fill: rgba(255,255,255,0.88);"/>
                <TextField fx:id="txtAutore"
                           promptText="Modifica l'autore"
                           style="-fx-background-color: rgba(255,255,255,0.12);
                                  -fx-background-radius: 14;
                                  -fx-border-radius: 14;
                                  -fx-border-color: rgba(255,255,255,0.18);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: rgba(255,255,255,0.55);
                                  -fx-padding: 12;
                                  -fx-font-size: 14px;"/>
            </VBox>

            <VBox spacing="6">
                <Label text="ISBN"
                       style="-fx-font-size: 12px;
                              -fx-font-weight: 800;
                              -fx-text-fill: rgba(255,255,255,0.88);"/>
                <TextField fx:id="txtISBN"
                           promptText="Modifica l'ISBN"
                           style="-fx-background-color: rgba(255,255,255,0.12);
                                  -fx-background-radius: 14;
                                  -fx-border-radius: 14;
                                  -fx-border-color: rgba(255,255,255,0.18);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: rgba(255,255,255,0.55);
                                  -fx-padding: 12;
                                  -fx-font-size: 14px;"/>
            </VBox>

            <HBox spacing="12">
                <VBox spacing="6" prefWidth="252">
                    <Label text="Anno di pubblicazione"
                           style="-fx-font-size: 12px;
                                  -fx-font-weight: 800;
                                  -fx-text-fill: rgba(255,255,255,0.88);"/>
                    <TextField fx:id="txtAnnoPubblicazione"
                               promptText="Modifica anno di pubblicazione"
                               style="-fx-background-color: rgba(255,255,255,0.12);
                                      -fx-background-radius: 14;
                                      -fx-border-radius: 14;
                                      -fx-border-color: rgba(255,255,255,0.18);
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: rgba(255,255,255,0.55);
                                      -fx-padding: 12;
                                      -fx-font-size: 14px;"/>
                </VBox>

            </HBox>

            <HBox spacing="12">
                <VBox spacing="6" prefWidth="252">
                    <Label text="Copie disponibili"
                           style="-fx-font-size: 12px;
                                  -fx-font-weight: 800;
                                  -fx-text-fill: rgba(255,255,255,0.88);"/>
                    <TextField fx:id="txtCopieDisponibili"
                               promptText="Modifica numero copie disponibili"
                               style="-fx-background-color: rgba(255,255,255,0.12);
                                      -fx-background-radius: 14;
                                      -fx-border-radius: 14;
                                      -fx-border-color: rgba(255,255,255,0.18);
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: rgba(255,255,255,0.55);
                                      -fx-padding: 12;
                                      -fx-font-size: 14px;"/>
                </VBox>
            </HBox>

        </VBox>

        <HBox spacing="12" alignment="CENTER" prefWidth="516">
            <Button fx:id="btnSalvaModifiche"
                    text="Salva Modifiche"
                    onAction="#handleSalva"
                    prefWidth="252" prefHeight="44"
                    style="-fx-background-color: #007AFF;
                           -fx-background-radius: 14;
                           -fx-text-fill: white;
                           -fx-font-weight: 900;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 14, 0.15, 0, 8);"/>

            <Button fx:id="btnAnnulla"
                    text="Annulla"
                    onAction="#handleAnnulla"
                    prefWidth="252" prefHeight="44"
                    style="-fx-background-color: linear-gradient(to right, #FF3B30, #FF5A52, #FF7A73);
                           -fx-background-radius: 14;
                           -fx-text-fill: white;
                           -fx-font-weight: 900;
                           -fx-cursor: hand;
                           -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 16, 0.18, 0, 9);"/>
        </HBox>

    </VBox>
</StackPane>
