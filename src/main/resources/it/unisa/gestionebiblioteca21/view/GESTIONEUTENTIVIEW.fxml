<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox alignment="TOP_CENTER"
      spacing="20"
      prefWidth="650" prefHeight="550"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unisa.gestionebiblioteca21.controller.GestioneUtentiController"
      stylesheets="@../css/appstyle.css"
      styleClass="root-light">

    

        <HBox alignment="CENTER_LEFT"
              spacing="10"
              prefHeight="90" prefWidth="600"
              styleClass="header-pane"
              style="-fx-background-color: #4A4A4C;-fx-background-radius: 25; -fx-padding: 0 20;">

            <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                <image>
                    <Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png" />
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="Gestione Utenti"
                   style="-fx-font-size: 30px;
                          -fx-font-weight: bold;
                          -fx-text-fill: white;" />

            <Region HBox.hgrow="ALWAYS" />

            <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                <image>
                    <Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png" />
                </image>
            </ImageView>
        </HBox>
    

    <TextField fx:id="txtRicercaUtente"
               promptText="Cerca un utente..."
               prefWidth="550"
               styleClass="apple-textfield"/>

    <Label text="Elenco Utenti"
           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #444;" />

    <TableView fx:id="tableview2"
               prefHeight="150" prefWidth="580"
               style="-fx-background-radius: 12; -fx-border-radius: 12;
                      -fx-border-color: #D2D2D7;">

        <columns>
            <TableColumn fx:id="colNome" text="Nome"/>
            <TableColumn fx:id="colCognome" text="Cognome"/>
            <TableColumn fx:id="colMatricola" text="Matricola"/>
            <TableColumn fx:id="colContatti" text="Contatti"/>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>
    </TableView>

    <HBox spacing="40" alignment="CENTER">

    <VBox spacing="10">

        <Button fx:id="btnInserimentoNuovoUtente"
                text="Inserisci Utente"
                onAction="#handleInserimentoUtente"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: white;
                       -fx-background-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: black;
                       -fx-font-weight: bold;" />

        <Button fx:id="btnCancellazioneUtente"
                text="Cancella Utente"
                onAction="#handleCancellazioneUtente"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: #FF3B30;
                       -fx-background-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;" />
    </VBox>

    <VBox spacing="10">

        <Button fx:id="btnModificaUtente"
                text="Modifica Utente"
                onAction="#handleModificaUtente"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: white;
                       -fx-background-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: black;
                       -fx-font-weight: bold;" />

        <Button fx:id="btnDashboard"
                text="Dashboard"
                onAction="#handleBackDashboard"
                prefWidth="200" prefHeight="40"
                style="-fx-background-color: white;
                       -fx-background-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: black;
                       -fx-font-weight: bold;" />
    </VBox>

</HBox>


</VBox>
