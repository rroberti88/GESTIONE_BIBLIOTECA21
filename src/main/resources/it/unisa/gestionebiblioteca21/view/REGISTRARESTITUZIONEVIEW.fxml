<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unisa.gestionebiblioteca21.controller.RegistraRestituzioneController">

   <children>

      <HBox prefHeight="55.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefWidth="600.0" text="DATI RESTITUZIONE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>

      <Label layoutX="50.0" layoutY="85.0" text="ISBN del Libro" />
      <TextField fx:id="txtLibro" layoutX="50.0" layoutY="115.0"
                 prefWidth="300.0" promptText="Inserisci ISBN..." />

      <Label layoutX="50.0" layoutY="165.0" text="Matricola Utente" />
      <TextField fx:id="txtUtente" layoutX="50.0" layoutY="195.0"
                 prefWidth="300.0" promptText="Inserisci matricola..." />

      <Label layoutX="50.0" layoutY="245.0" text="Data di Scadenza" />
      <TextField fx:id="txtDatadiScadenza" layoutX="50.0" layoutY="275.0"
                 prefWidth="300.0" promptText="AAAA-MM-GG" />

      <Button fx:id="btnAnnulla" layoutX="380.0" layoutY="275.0"
              prefWidth="100.0" text="Annulla" onAction="#handleAnnulla" />

      <Button fx:id="btnSalva" layoutX="485.0" layoutY="275.0"
              prefWidth="100.0" text="Salva (Cancella)"
              onAction="#handleSalva" />

   </children>
</Pane>
