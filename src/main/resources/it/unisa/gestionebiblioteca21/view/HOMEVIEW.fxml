<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<VBox alignment="TOP_CENTER"
      spacing="30"
      prefWidth="650" prefHeight="550"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unisa.gestionebiblioteca21.controller.HomeController"
      style="-fx-background-color: #F5F5F7;">



        <HBox alignment="CENTER_LEFT"
              spacing="10"
              prefHeight="90" prefWidth="600"
              style="-fx-background-color: #4A4A4C;
                     -fx-background-radius: 25;
                     -fx-padding: 0 20 0 20;">

            <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                <image>
                    <Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png" />
                </image>
            </ImageView>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="Dashboard Bibliotecario"
                   style="-fx-font-size: 26px; 
                          -fx-font-weight: bold;
                          -fx-text-fill: white;" />

            <Region HBox.hgrow="ALWAYS" />

            <ImageView fitHeight="60" fitWidth="60" preserveRatio="true">
                <image>
                    <Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png" />
                </image>
            </ImageView>

        </HBox>


    <HBox spacing="40" alignment="CENTER">
        <Button fx:id="btnGestioneLibri"
                text="Gestione Libri"
                onAction="#handleGestioneLibri"
                prefWidth="200" prefHeight="60"
                style="-fx-background-color: white;
                       -fx-background-radius: 12;
                       -fx-border-color: #D2D2D7;
                       -fx-border-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: #1C1C1E;
                       -fx-font-weight: bold;" />
        
        <Button fx:id="btnGestioneUtenti"
                text="Gestione Utenti"
                onAction="#handleGestioneUtenti"
                prefWidth="200" prefHeight="60"
                style="-fx-background-color: white;
                       -fx-background-radius: 12;
                       -fx-border-color: #D2D2D7;
                       -fx-border-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: #1C1C1E;
                       -fx-font-weight: bold;" />
    </HBox>

    <HBox spacing="40" alignment="CENTER">
        <Button fx:id="btnGestionePrestiti"
                text="Gestione Prestiti"
                onAction="#handleGestionePrestiti"
                prefWidth="200" prefHeight="60"
                style="-fx-background-color: white;
                       -fx-background-radius: 12;
                       -fx-border-color: #D2D2D7;
                       -fx-border-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: #1C1C1E;
                       -fx-font-weight: bold;" />

        <Button fx:id="btnLogout"
                text="Logout"
                onAction="#handleLogout"
                prefWidth="200" prefHeight="60"
                style="-fx-background-color: #FF3B30;
                       -fx-background-radius: 12;
                       -fx-font-size: 16px;
                       -fx-text-fill: white;
                       -fx-font-weight: bold;" />
    </HBox>

</VBox>