<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.unisa.gestionebiblioteca21.controller.HomeController"
           prefWidth="900" prefHeight="640"
           style="-fx-background-color: linear-gradient(to bottom right, #0B1220, #0E1B2E, #111827);">

    <VBox alignment="TOP_CENTER"
          spacing="18"
          maxWidth="520"
          prefWidth="520"
          style="-fx-background-color: rgba(255,255,255,0.08);
                 -fx-background-radius: 26;
                 -fx-border-radius: 26;
                 -fx-border-color: rgba(255,255,255,0.16);
                 -fx-border-width: 1;
                 -fx-padding: 26 26 24 26;">

        <effect>
            <DropShadow radius="30" spread="0.12" offsetY="10" color="#000000AA"/>
        </effect>

        
        <HBox alignment="CENTER_LEFT" spacing="14"
              style="-fx-background-color: rgba(255,255,255,0.06);
                     -fx-background-radius: 20;
                     -fx-padding: 14 16 14 16;">

            <ImageView fitHeight="46" fitWidth="46" preserveRatio="true">
                <image>
                    <Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png" />
                </image>
            </ImageView>

            <VBox spacing="2" alignment="CENTER_LEFT">
                <Label text="Biblioteca"
                       style="-fx-font-size: 18px;
                              -fx-font-weight: 900;
                              -fx-text-fill: white;"/>
                <Label text="Dashboard bibliotecario"
                       style="-fx-font-size: 12px;
                              -fx-text-fill: rgba(255,255,255,0.72);"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS"/>

            <Label text="HOME"
                   style="-fx-font-size: 12px;
                          -fx-font-weight: 900;
                          -fx-text-fill: rgba(255,255,255,0.85);
                          -fx-background-color: rgba(0,122,255,0.20);
                          -fx-background-radius: 999;
                          -fx-padding: 6 10 6 10;
                          -fx-border-color: rgba(0,122,255,0.35);
                          -fx-border-radius: 999;
                          -fx-border-width: 1;"/>
        </HBox>

       
        <VBox spacing="6" alignment="CENTER_LEFT">
            <Label text="Benvenuto nella Dashboard."
                   style="-fx-font-size: 26px;
                          -fx-font-weight: 900;
                          -fx-text-fill: white;"/>
            <Label text="Seleziona unâ€™area operativa per gestire dati e operazioni della biblioteca."
                   wrapText="true"
                   style="-fx-font-size: 13px;
                          -fx-text-fill: rgba(255,255,255,0.70);"/>
        </VBox>

        
        <VBox spacing="12" alignment="CENTER">
            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="btnGestioneLibri"
                        text="Gestione Libri"
                        onAction="#handleGestioneLibri"
                        prefWidth="240" prefHeight="62"
                        style="-fx-background-color: rgba(255,255,255,0.12);
                               -fx-background-radius: 16;
                               -fx-border-radius: 16;
                               -fx-border-color: rgba(255,255,255,0.18);
                               -fx-border-width: 1;
                               -fx-font-size: 15px;
                               -fx-font-weight: 900;
                               -fx-text-fill: white;
                               -fx-cursor: hand;
                               -fx-padding: 10 14 10 14;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 14, 0.15, 0, 8);"/>

                <Button fx:id="btnGestioneUtenti"
                        text="Gestione Utenti"
                        onAction="#handleGestioneUtenti"
                        prefWidth="240" prefHeight="62"
                        style="-fx-background-color: rgba(255,255,255,0.12);
                               -fx-background-radius: 16;
                               -fx-border-radius: 16;
                               -fx-border-color: rgba(255,255,255,0.18);
                               -fx-border-width: 1;
                               -fx-font-size: 15px;
                               -fx-font-weight: 900;
                               -fx-text-fill: white;
                               -fx-cursor: hand;
                               -fx-padding: 10 14 10 14;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 14, 0.15, 0, 8);"/>
            </HBox>

            <HBox spacing="12" alignment="CENTER">
                <Button fx:id="btnGestionePrestiti"
                        text="Gestione Prestiti"
                        onAction="#handleGestionePrestiti"
                        prefWidth="240" prefHeight="62"
                        style="-fx-background-color: rgba(255,255,255,0.12);
                               -fx-background-radius: 16;
                               -fx-border-radius: 16;
                               -fx-border-color: rgba(255,255,255,0.18);
                               -fx-border-width: 1;
                               -fx-font-size: 15px;
                               -fx-font-weight: 900;
                               -fx-text-fill: white;
                               -fx-cursor: hand;
                               -fx-padding: 10 14 10 14;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 14, 0.15, 0, 8);"/>

                <Button fx:id="btnLogout"
                        text="Logout"
                        onAction="#handleLogout"
                        prefWidth="240" prefHeight="62"
                        style="-fx-background-color: linear-gradient(to right, #FF3B30, #FF5A52, #FF7A73);
                               -fx-background-radius: 16;
                               -fx-font-size: 15px;
                               -fx-font-weight: 900;
                               -fx-text-fill: white;
                               -fx-cursor: hand;
                               -fx-padding: 10 14 10 14;
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 16, 0.18, 0, 9);"/>
            </HBox>
        </VBox>

      
        <HBox alignment="CENTER" spacing="8" style="-fx-padding: 4 0 0 0;">
            <Label text="Suggerimento:"
                   style="-fx-font-size: 11px;
                          -fx-font-weight: 900;
                          -fx-text-fill: rgba(255,255,255,0.70);"/>
            <Label text="usa i pulsanti sopra per navigare tra le sezioni principali."
                   style="-fx-font-size: 11px;
                          -fx-text-fill: rgba(255,255,255,0.65);"/>
        </HBox>

    </VBox>
</StackPane>
