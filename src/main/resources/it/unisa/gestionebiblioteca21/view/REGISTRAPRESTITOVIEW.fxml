<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="400.0" prefWidth="600.0"
      xmlns="http://javafx.com/javafx/25"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="it.unisa.gestionebiblioteca21.controller.RegistraPrestitoController">

   <children>

      <HBox prefHeight="40.0" prefWidth="600.0">
         <children>
            <Label alignment="CENTER" prefHeight="70.0" prefWidth="660.0" text="DATI PRESTITO">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
         </children>
      </HBox>

      <Label layoutX="31.0" layoutY="45.0" text="ISBN del Libro" />
      <TextField fx:id="txtISBN" layoutX="31.0" layoutY="75.0" prefWidth="250.0"
                 promptText="Inserisci ISBN..." />

      <Label layoutX="31.0" layoutY="125.0" text="Matricola Utente" />
      <TextField fx:id="txtMatricola" layoutX="31.0" layoutY="155.0" prefWidth="250.0"
                 promptText="Inserisci matricola..." />

      <Label layoutX="31.0" layoutY="205.0" text="Data Prestito (AAAA-MM-GG)" />
      <TextField fx:id="txtDataPrestito" layoutX="31.0" layoutY="235.0" prefWidth="250.0"
                 promptText="AAAA-MM-GG" />

      <Label layoutX="31.0" layoutY="285.0" text="Data Scadenza (AAAA-MM-GG)" />
      <TextField fx:id="txtDataScadenza" layoutX="31.0" layoutY="315.0" prefWidth="250.0"
                 promptText="AAAA-MM-GG" />

      <Button fx:id="btnAnnulla" layoutX="330.0" layoutY="315.0"
              prefWidth="110.0" text="Annulla" onAction="#handleAnnulla" />

      <Button fx:id="btnSalva" layoutX="450.0" layoutY="315.0"
              prefWidth="110.0" text="Salva" onAction="#handleSalva" />

   </children>
</Pane>

