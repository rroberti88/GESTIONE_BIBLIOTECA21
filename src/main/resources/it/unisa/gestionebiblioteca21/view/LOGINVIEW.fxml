<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>

<StackPane xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="it.unisa.gestionebiblioteca21.controller.LoginController"
           prefWidth="900" prefHeight="640"
           style="-fx-background-color: linear-gradient(to bottom right, #0B1220, #0E1B2E, #111827);">

   
    <VBox alignment="TOP_CENTER"
          spacing="18"
          maxWidth="420"
          prefWidth="420"
          style="-fx-background-color: rgba(255,255,255,0.08);
                 -fx-background-radius: 26;
                 -fx-border-radius: 26;
                 -fx-border-color: rgba(255,255,255,0.16);
                 -fx-border-width: 1;
                 -fx-padding: 28 28 26 28;">

        <effect>
            <DropShadow radius="30" spread="0.12" offsetY="10" color="#000000AA"/>
        </effect>

  
        <HBox alignment="CENTER_LEFT" spacing="14"
              style="-fx-background-color: rgba(255,255,255,0.06);
                     -fx-background-radius: 20;
                     -fx-padding: 14 16 14 16;">
            <ImageView fitHeight="46" fitWidth="46" preserveRatio="true">
                <image>
                    <Image url="@/it/unisa/gestionebiblioteca21/assets/logo.png" />
                </image>
            </ImageView>

            <VBox spacing="2" alignment="CENTER_LEFT">
                <Label text="Biblioteca"
                       style="-fx-font-size: 18px;
                              -fx-font-weight: 800;
                              -fx-text-fill: white;"/>
                <Label text="Accesso bibliotecario"
                       style="-fx-font-size: 12px;
                              -fx-text-fill: rgba(255,255,255,0.72);"/>
            </VBox>

            <Region HBox.hgrow="ALWAYS" />

            <Label text="LOGIN"
                   style="-fx-font-size: 12px;
                          -fx-font-weight: 800;
                          -fx-text-fill: rgba(255,255,255,0.85);
                          -fx-background-color: rgba(0,122,255,0.20);
                          -fx-background-radius: 999;
                          -fx-padding: 6 10 6 10;
                          -fx-border-color: rgba(0,122,255,0.35);
                          -fx-border-radius: 999;
                          -fx-border-width: 1;"/>
        </HBox>

 
        <VBox spacing="6" alignment="CENTER_LEFT">
            <Label text="Bentornato."
                   style="-fx-font-size: 28px;
                          -fx-font-weight: 900;
                          -fx-text-fill: white;"/>
            <Label text="Inserisci le credenziali per accedere alla dashboard."
                   wrapText="true"
                   style="-fx-font-size: 13px;
                          -fx-text-fill: rgba(255,255,255,0.70);"/>
        </VBox>

      
        <VBox spacing="12" alignment="CENTER_LEFT">

            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Username"
                       style="-fx-font-size: 12px;
                              -fx-font-weight: 700;
                              -fx-text-fill: rgba(255,255,255,0.85);"/>
                <TextField fx:id="txtUsername"
                           promptText="Inserisci username..."
                           prefWidth="360"
                           style="-fx-background-color: rgba(255,255,255,0.12);
                                  -fx-background-radius: 14;
                                  -fx-border-radius: 14;
                                  -fx-border-width: 1;
                                  -fx-border-color: rgba(255,255,255,0.18);
                                  -fx-text-fill: white;
                                  -fx-prompt-text-fill: rgba(255,255,255,0.55);
                                  -fx-padding: 12 12 12 12;
                                  -fx-font-size: 14px;"/>
            </VBox>

            <VBox spacing="6" alignment="CENTER_LEFT">
                <Label text="Password"
                       style="-fx-font-size: 12px;
                              -fx-font-weight: 700;
                              -fx-text-fill: rgba(255,255,255,0.85);"/>
                <PasswordField fx:id="txtPassword"
                               promptText="Inserisci password..."
                               prefWidth="360"
                               style="-fx-background-color: rgba(255,255,255,0.12);
                                      -fx-background-radius: 14;
                                      -fx-border-radius: 14;
                                      -fx-border-width: 1;
                                      -fx-border-color: rgba(255,255,255,0.18);
                                      -fx-text-fill: white;
                                      -fx-prompt-text-fill: rgba(255,255,255,0.55);
                                      -fx-padding: 12 12 12 12;
                                      -fx-font-size: 14px;"/>
            </VBox>

        </VBox>

      
        <Button fx:id="btnAccedi"
                text="Accedi"
                onAction="#handleLogin"
                prefWidth="360"
                prefHeight="44"
                style="-fx-background-color: linear-gradient(to right, #007AFF, #4C8DFF, #6AA8FF);
                       -fx-background-radius: 14;
                       -fx-font-size: 16px;
                       -fx-font-weight: 900;
                       -fx-text-fill: white;
                       -fx-cursor: hand;
                       -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35), 18, 0.2, 0, 8);"/>

      
        <HBox alignment="CENTER" spacing="8" style="-fx-padding: 4 0 0 0;">
            <Label text="Tip:"
                   style="-fx-font-size: 11px;
                          -fx-font-weight: 800;
                          -fx-text-fill: rgba(255,255,255,0.70);"/>
            <Label text="puoi premere ACCEDI solo dopo aver compilato tutti i campi."
                   style="-fx-font-size: 11px;
                          -fx-text-fill: rgba(255,255,255,0.65);"/>
        </HBox>
        
        <Button text="Password dimenticata"
        onAction="#handlePasswordDimenticata"
        prefWidth="360"
        prefHeight="38"
        style="
            -fx-background-color: rgba(255,255,255,0.08);
            -fx-background-radius: 14;
            -fx-border-color: rgba(255,255,255,0.20);
            -fx-border-radius: 14;
            -fx-border-width: 1;
            -fx-font-size: 13px;
            -fx-font-weight: 700;
            -fx-text-fill: rgba(255,255,255,0.85);
            -fx-cursor: hand;
        "/>



    </VBox>
</StackPane>
